let g:neovide_scale_factor = 0.51
set nobackup
set clipboard=unnamedplus
set cmdheight=1
set completeopt=menuone,noselect
set conceallevel=0
set fileencoding=utf-8
set hlsearch
set ignorecase
set mouse=a
set pumheight=10
set noshowmode
set showtabline=0
set smartcase
set smartindent
set splitbelow
set splitright
set noswapfile
set termguicolors
set timeout timeoutlen=300
set undofile
set updatetime=300
set nowritebackup
set expandtab
set shiftwidth=2
set tabstop=2
set cursorline
set number
set norelativenumber
set laststatus=3
set noshowcmd
set noruler
set numberwidth=4
set signcolumn=yes
set nowrap
set scrolloff=8
set sidescrolloff=8
set guifont=monospace:h17
set fillchars+=eob: 
set shortmess+=c
set whichwrap+=<,>,[,],h,l
set iskeyword+=-
set formatoptions-=cro
set linebreak
set guicursor+=a:blinkon500

Plug 'neoclide/coc.nvim', {'branch': 'release'}
