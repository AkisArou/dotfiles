#!/usr/bin/zsh

source "$(dirname "$0")/scripts/library"

clear
echo "Installing xorg with i3wm..."
echo "----------------------------"
echo ""

packages=(
  "xorg"
  "xorg-xinit"
  "xorg-xinput"
  "i3-wm"
  "xidlehook"
  "picom"
  # "rofi"
  "rofi-power-menu"
  "nitrogen"
  "xclip"
  "polybar"
  "flameshot"
)

install_packages "${packages[@]}"

print_success "DONE!"
