#!/usr/bin/zsh

source "$HOME/dotfiles/scripts/library"

clear
echo "Installing wayland with dwl..."
echo "----------------------------------"
echo ""

packages=(
  "wayland"
  "wayland-protocols"
  "wlroots0.19"
  "foot"
  "foot-terminfo"
  "hyprpicker"
  "polkit"
  "swaybg"
  "swaydim"
  "swayidle"
  "waybar"
  "wl-clipboard"
  "xdg-desktop-portal-wlr"
  "xorg-xwayland"
)

install_packages "${packages[@]}"

~/dotfiles/dwl/build

print_success "DONE!"
