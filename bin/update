#!/usr/bin/zsh

source "$HOME/dotfiles/scripts/library"

print_info "system:"
paru -Syu
echo

print_info "nvim:"
~/dotfiles/scripts/build-nvim
echo

nvim --headless \
  -c "lua vim.pack.update({}, { force = true })" \
  -c "quit"
echo

nvim --headless -c 'autocmd User MasonUpdateAllComplete quitall' -c 'lua require("plugins.lsp.mason")' -c 'MasonUpdateAll'
echo

print_info "zinit:"
ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"
source "${ZINIT_HOME}/zinit.zsh"
zinit self-update
zinit update --parallel
echo

print_info "tmux:"
~/.tmux/plugins/tpm/bin/update_plugins all
echo

print_info "yazi:"
ya pkg upgrade
echo

print_info "rust:"
rustup update
echo

print_info "asdf:"
asdf plugin update --all
echo

print_info "firmware:"
fwupdmgr get-updates
echo

print_info "corepack:"
npm install --global corepack@latest
