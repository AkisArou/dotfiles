#!/usr/bin/zsh

source "$HOME/dotfiles/scripts/library"

if [ -f /etc/os-release ]; then
  . /etc/os-release
  OS=$ID
else
  echo "Could not detect OS."
  exit 1
fi

if [ "$OS" == "arch" ]; then
  print_info "system: Arch Linux"
  paru -Syu
  echo
elif [ "$OS" == "debian" ] || [ "$OS" == "ubuntu" ]; then
  print_info "system: Debian-based (Ubuntu/Debian)"
  sudo apt update && sudo apt upgrade -y
  echo
else
  print_info "system: Unknown OS ($OS)"
  exit 1
fi

if command -v flatpak &>/dev/null; then
  print_info "Updating Flatpak packages..."
  flatpak update -y
  echo
fi

print_info "nvim:"
~/dotfiles/scripts/build-nvim
echo

nvim --headless \
  -c "lua vim.pack.update(nil, { force = true })" \
  -c "quit"
echo
echo

nvim --headless -c 'autocmd User MasonUpdateAllComplete quitall' -c 'lua require("plugins.lsp.mason")' -c 'MasonUpdateAll'
echo

print_info "zinit:"
ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"
source "${ZINIT_HOME}/zinit.zsh"
zinit self-update
zinit update --parallel
echo

print_info "tmux:"
~/.tmux/plugins/tpm/bin/update_plugins all
echo

print_info "yazi:"
ya pkg upgrade
echo

print_info "rust:"
rustup update
echo

print_info "asdf:"
asdf plugin update --all
echo

print_info "firmware:"
fwupdmgr get-updates
echo

print_info "corepack:"
npm install --global corepack@latest
