{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "lsp": "allow"
  },
  "lsp": {
    "typescript": {
      "disabled": true
    },
    "tsgo": {
      "disabled": false,
      "command": ["tsgo", "--lsp", "--stdio"],
      "extensions": [".cjs", ".mjs", ".js", ".jsx", ".ts", ".tsx", ".mts"]
    }
  },
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest", "--autoConnect"]
    },
    "tanstack": {
      "type": "local",
      "command": ["npx", "@tanstack/cli", "mcp"]
    }
  }
}
